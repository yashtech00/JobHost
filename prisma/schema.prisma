generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  name        String?
  password    String?
  email       String        @unique
  provider    Provider
  jobs        Job[]
  applicant   Applicant[]
  userprofile UserProfile[]
  employee    Employee[]
}

model Employee {
  id          String @id @default(uuid())
  name        String?
  email       String @unique
  companyname String?
  phonenumber String?
  userId      String
  user        User   @relation(fields: [userId], references: [id])
}

model Job {
  id          String      @id @default(uuid())
  title       String
  description String
  company     String
  jobtype     String
  location    String
  salary      Int
  experience  Int
  createdAt   DateTime    @default(now())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  Applicant   Applicant[]
}

model Applicant {
  id     String @id @default(uuid())
  resume String
  userId String
  jobId  String
  user   User   @relation(fields: [userId], references: [id])
  job    Job    @relation(fields: [jobId], references: [id])
}

model UserProfile {
  id String @id @default(uuid())

  username      String
  email         String @unique
  firstName     String
  lastName      String
  country       String
  streetAddress String
  city          String
  state         String
  postalCode    String

  workingYear      Int?
  workingMonth     Int?
  links            String?
  resume           String?
  education        String
  gender           String
  profilePic       String?
  preferedJobTitle String?
  preferedLocation String?
  skills           String?

  userId String
  user   User?  @relation(fields: [userId], references: [id])
}

enum Provider {
  Github
  Credentials
}
